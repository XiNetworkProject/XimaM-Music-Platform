# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production-123456789

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# MongoDB
# Si MongoDB local: mongodb://localhost:27017/ximam
# Si MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/ximam
MONGODB_URI=mongodb://localhost:27017/ximam

# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# JWT Secret (générer une clé aléatoire)
JWT_SECRET=your-jwt-secret-key-123456789

# App Configuration
APP_NAME=XimaM
APP_VERSION=1.0.0
APP_ENVIRONMENT=development

# API Base URL (pour mobile)
# En développement: http://localhost:3000/api
# En production: https://your-domain.com/api
API_BASE_URL=http://localhost:3000/api

# Update Server (pour les mises à jour automatiques)
# En développement: http://localhost:3000/api/updates
# En production: https://your-update-server.com/api/updates
UPDATE_SERVER_URL=http://localhost:3000/api/updates
UPDATE_CHECK_INTERVAL=3600000 # 1 heure en millisecondes

# Stripe Configuration
# Obtenir ces clés depuis https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Prix Stripe - Offre de Lancement (avec réductions 50-70%)
# Ces prix seront utilisés en priorité pendant l'offre de lancement
NEXT_PUBLIC_STRIPE_PRICE_STARTER_MONTH_LAUNCH=price_starter_month_launch
NEXT_PUBLIC_STRIPE_PRICE_STARTER_YEAR_LAUNCH=price_starter_year_launch
NEXT_PUBLIC_STRIPE_PRICE_PRO_MONTH_LAUNCH=price_pro_month_launch
NEXT_PUBLIC_STRIPE_PRICE_PRO_YEAR_LAUNCH=price_pro_year_launch

# Prix Stripe - Tarifs Normaux (à utiliser après la fin de l'offre)
NEXT_PUBLIC_STRIPE_PRICE_STARTER_MONTH=price_starter_month_normal
NEXT_PUBLIC_STRIPE_PRICE_STARTER_YEAR=price_starter_year_normal
NEXT_PUBLIC_STRIPE_PRICE_PRO_MONTH=price_pro_month_normal
NEXT_PUBLIC_STRIPE_PRICE_PRO_YEAR=price_pro_year_normal
NEXT_PUBLIC_STRIPE_PRICE_ENTERPRISE_MONTH=price_enterprise_month
NEXT_PUBLIC_STRIPE_PRICE_ENTERPRISE_YEAR=price_enterprise_year

# Suno AI Configuration
SUNO_API_BASE=https://api.sunoapi.org
SUNO_API_KEY=your_suno_api_key_here

# CDN Configuration (optional, pour Bunny CDN)
NEXT_PUBLIC_CDN_ENABLED=true
NEXT_PUBLIC_CDN_DOMAIN=synaura-cdn.b-cdn.net 

# Admin Panel (bootstrap)
# Comma-separated list of emails that can access /admin even if their profile.role is not 'admin' yet.
# Example: ADMIN_OWNER_EMAILS=me@domain.com,other@domain.com
ADMIN_OWNER_EMAILS=

# SYNAURA TV (Mux Live)
# Create an API token in Mux dashboard (Video).
MUX_TOKEN_ID=
MUX_TOKEN_SECRET=

# Ads (MVP)
# - Visuel: house ads côté UI (upgrade) tant qu'aucun provider n'est branché.
# - Audio: URL MP3/WAV (courte) jouée entre 2 tracks pour les comptes Free (adFree=false).
NEXT_PUBLIC_AUDIO_AD_URL=
NEXT_PUBLIC_AUDIO_AD_CLICK_URL=/subscriptions

# Google AdSense (vraies pubs visuelles)
# Exemple: ca-pub-1234567890123456
NEXT_PUBLIC_ADSENSE_CLIENT=
# Ad unit slots (IDs numériques) par emplacement
NEXT_PUBLIC_ADSENSE_SLOT_HOME=
NEXT_PUBLIC_ADSENSE_SLOT_FEED=
NEXT_PUBLIC_ADSENSE_SLOT_PLAYER=